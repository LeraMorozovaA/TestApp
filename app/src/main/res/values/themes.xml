<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyTestApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_700</item>
        <item name="colorSecondaryVariant">#00CCBB</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorAccent">@color/orange</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="outlineButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:insetLeft">1dp</item>
        <item name="android:insetRight">5dp</item>
        <item name="android:insetTop">6dp</item>
        <item name="android:insetBottom">6dp</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">11sp</item>
        <item name="cornerRadius">25dp</item>
        <item name="strokeColor">@color/orange</item>
    </style>

    <style name="confirmButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">30dp</item>
        <item name="android:textSize">12sp</item>
        <item name="backgroundTint">@color/green</item>

    </style>
</resources>